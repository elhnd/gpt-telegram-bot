
{% extends 'base.html.twig' %}

{% block title %}Etudiant{% endblock %}

{% block body %}
 <div class="max-w-7xl mx-auto px-4 py-10">
    <div class="bg-white">
        <div class="flex flex-col md:flex-row items-start">
            <div class="w-full md:w-auto flex flex-col items-center justify-center mb-8 md:mb-0 md:mr-8">
                <aside class="flex flex-col w-64 h-auto px-4 py-8 overflow-y-auto bg-white border-r rtl:border-r-0 rtl:border-l dark:bg-gray-900 dark:border-gray-700">
       
                    <div class="flex flex-col items-center mt-6 -mx-2">
                        <img class="object-cover w-24 h-24 mx-2 rounded-full" src="https://images.unsplash.com/photo-1531427186611-ecfd6d936c79?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=634&q=80" alt="avatar">
                        <h4 class="mx-2 mt-2 font-medium text-gray-800 dark:text-gray-200">John Doe</h4>
                        <p class="mx-2 mt-1 text-sm font-medium text-gray-600 dark:text-gray-400">john@example.com</p>
                    </div>

                    <div class="flex flex-col justify-between flex-1 mt-6">
                        <nav>

                            {% set custom_href %}
                                <a class="flex items-center px-4 py-2 text-gray-500 bg-gray-100 rounded dark:bg-gray-800 dark:text-gray-200" href="#" @click="isOpen = true">
